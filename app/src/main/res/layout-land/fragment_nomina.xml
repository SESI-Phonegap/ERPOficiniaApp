<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.despacho.com.ofinicaerp.fragments.NominaFragment">

    <Spinner
        android:id="@+id/spinner_mes"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTeal"
        android:text="@string/btn_buscar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_header_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_buscar">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/lbl_empleados"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/empleados"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/lbl_semana1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/lbl_empleados"
            android:text="@string/semana1"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/lbl_semana2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/lbl_semana1"
            android:text="@string/semana2"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/lbl_semana3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/lbl_semana2"
            android:text="@string/semana3"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/lbl_semana4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/lbl_semana3"
            android:text="@string/semana4"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/lbl_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/lbl_semana4"
            android:text="@string/label_total"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
