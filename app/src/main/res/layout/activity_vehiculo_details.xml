<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.despacho.com.ofinicaerp.activity.VehiculoDetails">

    <ImageView
        android:id="@+id/vehiculo_photo_details"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/camaro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vehiculo_img_btn_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pencil"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/btn_vehiculo_previous_details"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/skip_previous"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/vehiculo_photo_details"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/btn_vehiculo_next_details"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/skip_next"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/vehiculo_photo_details"
        android:layout_marginBottom="8dp" />

    <android.support.v7.widget.CardView
        app:cardCornerRadius="6dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vehiculo_photo_details"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.100000024">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/car"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:id="@+id/imageView2" />
            <TextView
                android:id="@+id/vehiculo_nombre_details"
                android:textColor="@color/colorAzulDark"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Ford F150"
                app:layout_constraintLeft_toRightOf="@+id/imageView2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/vehiculo_marca_details"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:textColor="@color/colorAzulDark"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="CHEVROLET"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vehiculo_nombre_details"
                android:layout_marginLeft="67dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/vehiculo_ano_details"
                android:layout_marginRight="0dp" />

            <TextView
                android:id="@+id/vehiculo_ano_details"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:textColor="@color/colorAzulDark"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="2015"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vehiculo_nombre_details" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/barcode_scan"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/imageView5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vehiculo_marca_details" />

            <TextView
                android:id="@+id/vehiculo_num_serie_details"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:textColor="@color/colorAzulDark"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="MSDJ38D3J8SJ2"
                app:layout_constraintLeft_toRightOf="@+id/imageView5"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vehiculo_marca_details" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/placas"
                android:id="@+id/imageView4"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/vehiculo_placas_details"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:textColor="@color/colorAzulDark"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="HFK-33-55"
                app:layout_constraintLeft_toRightOf="@+id/imageView4"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vehiculo_num_serie_details"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/palette"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/imageView6" />

            <TextView
                android:id="@+id/vehiculo_color_details"
                android:textColor="@color/colorAzulDark"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="ROJO"
                app:layout_constraintLeft_toRightOf="@+id/imageView6"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vehiculo_placas_details" />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/worker"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:id="@+id/imageView7" />

            <TextView
                android:id="@+id/vehiculo_empleado_details"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/colorAzulDark"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Marco Antonio Gonzalez Salgado"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vehiculo_color_details"
                app:layout_constraintLeft_toRightOf="@+id/imageView7"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
