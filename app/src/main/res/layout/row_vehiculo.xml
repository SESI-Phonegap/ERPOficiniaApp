<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_avatar_car"
        android:layout_margin="7dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/car"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/row_name_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/article_subheading"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Camioneta DODGE RAM"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@+id/list_avatar_car"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/row_model_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/article_subheading"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="2015"
        app:layout_constraintLeft_toRightOf="@+id/list_avatar_car"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/row_name_car"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/row_placas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/article_subheading"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="HFB-65-788"
        android:layout_marginStart="18dp"
        tools:layout_editor_absoluteY="39dp"
        app:layout_constraintLeft_toRightOf="@+id/row_model_car"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/row_color"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/row_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/article_subheading"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Negra"
        tools:layout_editor_absoluteY="39dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp" />


    <!-- quick and dirty divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
